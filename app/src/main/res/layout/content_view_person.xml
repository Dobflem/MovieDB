<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/moviereel"
    android:id="@+id/mainpage"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ie.thecoolkids.moviedb.ViewPerson"
    tools:showIn="@layout/activity_view_person">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C000000"
            android:id="@+id/wholePage"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/topSection"
                android:measureWithLargestChild="true"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/topLeft">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/poster"
                        android:src="@drawable/movies" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/topRight">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/name"
                        android:padding="15dp"
                        android:background="#9C000000"
                        android:layout_marginLeft="10dp">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/name"
                            android:textAlignment="center"
                            android:textIsSelectable="true"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#e4e1e1" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomSection">

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsBox"
                    android:background="#9C000000"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="DETAILS"
                        android:id="@+id/detailsHeading"
                        android:singleLine="true"
                        android:textColor="#d4d0d0" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:id="@+id/otherNamesLine"
                        android:longClickable="false">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/otherNamesHeading"
                            android:singleLine="true"
                            android:textColor="#e4e1e1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/otherNames"
                            android:textColor="#e4e1e1"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/birthplaceLine"
                        android:paddingLeft="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Place of Birth:"
                            android:id="@+id/birthplaceHeader"
                            android:textColor="#e4e1e1" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Shawnee, Oklahoma, United States"
                            android:id="@+id/placeOfBirth"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#e4e1e1"
                            android:textIsSelectable="false"
                            android:singleLine="false"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/homepageLine"
                        android:paddingLeft="30dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Homepage:"
                            android:id="@+id/homepageHeader"
                            android:textColor="#e4e1e1" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="blabla.com"
                            android:id="@+id/homepage"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#e4e1e1"
                            android:textIsSelectable="false"
                            android:singleLine="false"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/birthdayLine"
                        android:paddingLeft="30dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Birth Day:"
                            android:id="@+id/birthdayHeader"
                            android:textColor="#e4e1e1" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="02/09/1962"
                            android:id="@+id/birthday"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#e4e1e1"
                            android:textIsSelectable="false"
                            android:singleLine="false"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/deathdayLine"
                        android:paddingLeft="30dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/deathdayHeader"
                            android:textColor="#e4e1e1" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/deathday"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#e4e1e1"
                            android:textIsSelectable="false"
                            android:singleLine="false"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="50px" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/biographyBox"
                    android:background="#9C000000"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BIOGRAPHY"
                        android:id="@+id/biographyHeading"
                        android:textColor="#d4d0d0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="biography"
                        android:id="@+id/biography"
                        android:textColor="#e4e1e1"
                        android:paddingLeft="30dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50px" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonRow"
                    android:background="#9C000000"
                    android:padding="10dp">

                    <Space
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addFavButton"
                        android:src="@drawable/favbutton"
                        android:padding="0dp" />

                    <Space
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

