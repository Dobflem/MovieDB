<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C000000"
            android:id="@+id/wholePage"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/topSection"
                android:measureWithLargestChild="true"
                android:layout_weight="0.25">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/topLeft">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/poster"
                        android:src="@drawable/movies" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/topRight">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Swipe to see next season"
                            android:id="@+id/swipeExplain"
                            android:singleLine="true" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="170px" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/NameandAirDate"
                            android:padding="15dp"
                            android:background="#9C000000"
                            android:layout_marginLeft="10dp">


                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:id="@+id/name"
                                android:textAlignment="center"
                                android:textIsSelectable="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#e4e1e1" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="20px"
                                android:background="#730f0c0c" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="First air date :"
                                android:id="@+id/airdateHeading"
                                android:paddingStart="20dp"
                                android:textAlignment="center"
                                android:textColor="#e4e1e1" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="airdate"
                                android:id="@+id/airdate"
                                android:paddingStart="20dp"
                                android:textAlignment="center"
                                android:textColor="#e4e1e1" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="20px"
                                android:background="#730f0c0c" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="season num"
                                android:id="@+id/seasonNum"
                                android:paddingStart="20dp"
                                android:textAlignment="center"
                                android:textColor="#e4e1e1" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomSection"
                android:layout_weight="0.75">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/overviewBox"
                    android:background="#9C000000"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="OVERVIEW"
                        android:id="@+id/overviewHeading"
                        android:textColor="#d4d0d0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="overview"
                        android:id="@+id/overview"
                        android:textColor="#e4e1e1"
                        android:paddingLeft="30dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30px" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/EpisodesBox"
                    android:background="#9C000000"
                    android:padding="10dp"
                    android:measureWithLargestChild="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="EPISODES"
                        android:id="@+id/episodesHeading"
                        android:textColor="#d4d0d0" />

                    <Space
                        android:layout_width="20px"
                        android:layout_height="20px" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/epList"></LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>